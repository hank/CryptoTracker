<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/currency" android:layout_gravity="left" android:layout_weight="0.5"
                android:textSize="@dimen/ticker_name"/>
        <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:id="@+id/amountBTC" android:layout_gravity="right" android:layout_weight="1"
                android:textAlignment="gravity" android:textSize="@dimen/ticker_price"
                android:layout_marginLeft="5dip" android:gravity="center_vertical|right"/>
        <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/amountUSD" android:layout_weight="1"
                android:textAlignment="gravity" android:textSize="@dimen/ticker_price"
                android:layout_marginLeft="5dip" android:gravity="center_vertical|right"/>
        <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/amountUSDTotal" android:layout_weight="1"
                android:textAlignment="gravity" android:textSize="@dimen/ticker_price"
                android:layout_marginLeft="5dip" android:gravity="center_vertical|right"/>
    </LinearLayout>
</LinearLayout>